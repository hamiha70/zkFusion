{
  "name": "zkfusion",
  "version": "1.0.0",
  "description": "ZK-powered Dutch auctions for fast, private, provable intent settlement",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "demo": "node demo.js",
    "deploy": "hardhat run scripts/deploy.js",
    "deploy:polygon": "hardhat run scripts/deploy.js --network polygon",
    "deploy:arbitrum": "hardhat run scripts/deploy.js --network arbitrum",
    "circuit:compile": "node scripts/zk/compile-circuit.js",
    "circuit:ptau": "chmod +x scripts/zk/setup-ptau.sh && ./scripts/zk/setup-ptau.sh",
    "circuit:ptau:4": "chmod +x scripts/zk/setup-ptau.sh && ./scripts/zk/setup-ptau.sh 4",
    "circuit:ptau:8": "chmod +x scripts/zk/setup-ptau.sh && ./scripts/zk/setup-ptau.sh 8",
    "circuit:ptau:16": "chmod +x scripts/zk/setup-ptau.sh && ./scripts/zk/setup-ptau.sh 16",
    "circuit:setup": "node scripts/zk/setup-ceremony.js",
    "circuit:prove": "node scripts/zk/generate-proof.js",
    "circuit:verify": "node scripts/zk/verify-proof.js",
    "circuit:clean": "node scripts/zk/clean-artifacts.js",
    "zk:full-setup": "npm run circuit:compile && npm run circuit:setup",
    "example": "hardhat run scripts/example-auction.js",
    "example:combined": "hardhat run scripts/deploy-and-example.js",
    "example:with-zk": "npm run circuit:prove && hardhat run scripts/example-auction-zk.js",
    "full-demo": "npm run deploy && npm run zk:full-setup && npm run example:with-zk",
    "test:integration": "hardhat test test/integration/",
    "test:zk": "hardhat test test/integration/zk-proof.test.js",
    "lint": "solhint 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol' 'scripts/**/*.js' 'test/**/*.js'",
    "external-docs:setup": "chmod +x scripts/external_docs_creation/setup-all-docs.sh && ./scripts/external_docs_creation/setup-all-docs.sh",
    "ts:build": "tsc",
    "ts:watch": "tsc --watch",
    "ts:clean": "rm -rf dist",
    "test:ts": "npx mocha test-circuits/**/*.ts --require ts-node/register --timeout 60000 --require tsconfig-paths/register",
    "external-docs:update": "cd docs_external && find . -name '.git' -type d -execdir git pull \\;",
    "external-docs:clean": "rm -rf docs_external",
    "external-docs:high-priority": "chmod +x scripts/external_docs_creation/clone-high-priority-docs.sh && ./scripts/external_docs_creation/clone-high-priority-docs.sh",
    "external-docs:download-convert": "chmod +x scripts/external_docs_creation/download-and-convert-docs.sh && ./scripts/external_docs_creation/download-and-convert-docs.sh",
    "external-docs:validate": "chmod +x scripts/external_docs_creation/validate-docs-quality.sh && ./scripts/external_docs_creation/validate-docs-quality.sh",
    "external-docs:complete": "npm run external-docs:setup && npm run external-docs:download-convert && npm run external-docs:validate",
    "external-docs:cleanup": "chmod +x scripts/external_docs_creation/cleanup-docs.sh && ./scripts/external_docs_creation/cleanup-docs.sh",
    "cursor:rules": "chmod +x scripts/external_docs_creation/generate-cursor-rules.sh && ./scripts/external_docs_creation/generate-cursor-rules.sh",
    "build:ts": "tsc",
    "type-check": "tsc --noEmit",
    "test:circuits": "mocha test-circuits/**/*.test.ts --require ts-node/register --timeout 60000"
  },
  "keywords": [
    "zk",
    "zero-knowledge",
    "auction",
    "dutch-auction",
    "defi",
    "1inch",
    "fusion",
    "circom",
    "groth16",
    "blockchain",
    "ethereum"
  ],
  "author": "zkFusion Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@types/node": "^24.1.0",
    "circomkit": "^0.3.4",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@1inch/byte-utils": "^3.1.0",
    "@1inch/limit-order-sdk": "^4.9.5-rc.0",
    "@openzeppelin/contracts": "^5.0.0",
    "chalk": "^4.1.2",
    "circomlib": "^2.0.5",
    "circomlibjs": "^0.1.7",
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "ffjavascript": "^0.2.60",
    "ora": "^5.4.1",
    "poseidon-lite": "^0.3.0",
    "shelljs": "^0.8.5",
    "snarkjs": "^0.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zkfusion/zkfusion.git"
  },
  "bugs": {
    "url": "https://github.com/zkfusion/zkfusion/issues"
  },
  "homepage": "https://github.com/zkfusion/zkfusion#readme"
}
